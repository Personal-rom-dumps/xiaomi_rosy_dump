echo "=    #######  |      #######  |      ### \   ## |  ="
echo "=    ## |__## |      ## |__## |      #### \  ## |  =" 
echo "=    ##    ## /      ##    ## /      ## ## \ ## |  ="
echo "=    ###### _/       ######  \       ##  ##  ## |  =" 
echo "=    ## ##  \        ## |__## |      ## | ## ## |  ="
echo "=    ## | ## \   _   ##    ## |   _  ## |  #### |  ="
echo "=    ##/   ##/  |_|  ###### _/   |_| ##/    ###/   ="
echo $g"===================================================="
echo "=================== - R.B.N - ======================"
echo $g"===================================================="
#echo "                                                    "
#echo $r"____________________________________________________"
echo "                                                    "
echo $cy"         masukkan [R] untuk kembali ke menu         "
echo $y"===================================================="
echo "______________________Feature_______________________"
echo "===================================================="
echo ""
echo $g"===================================================="
echo $y"1.ðŸ”¹Convert system.new.dat.br To system.img"
echo $g"===================================================="
echo $y"2.ðŸ”¹Convert vendor.new.dat.br To vendor.img"
echo $g"===================================================="
echo $y"3.ðŸ”¹Convert system.img To system.new.dat.br"
echo $g"===================================================="
echo $y"4.ðŸ”¹Convert vendor.img To vendor.new.dat.br"
echo $g"===================================================="
echo $y"5.ðŸ”¹Extract system.img"
echo $g"===================================================="
echo $y"6.ðŸ”¹Extract vendor.img"
echo $g"===================================================="
echo $y"7.ðŸ”¹Repact system To img"
echo $g"===================================================="
echo $y"8.ðŸ”¹Repact vendor To img"
echo $g"===================================================="
echo $y"9.ðŸ”¹Backup file To img"
echo $g"===================================================="
echo $y"10.ðŸ”¹Build Rom Reborn"
echo $g"===================================================="
echo $y"11.ðŸ”¹Donasi"
echo $g"===================================================="
echo ""
echo $cy"      masukkan [C] untuk melihat anunya REBORN     "
echo ""
echo $y"===================================================="
echo "===================================================="
echo $g"===================================================="
echo "================     REBORN TEAM    ================"
echo "===================================================="
echo $y""
echo -n "Masukkan pilihan dan enter [1-11]: "  
read character
case $character in 


1) $bb clear;
start_ssdat
$bb echo ""
start_sdat
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
$bb clear ;;

2) $bb clear;
start_vvdat
$bb echo ""
start_pdat
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
$bb clear ;;

3) $bb clear;
start_sbr
$bb echo ""
start_bawok
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
$bb clear ;;

4) $bb clear;
start_vbr
$bb echo ""
start_dancok
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
$bb clear ;;

R) $bb clear;
R
sleep 1
$bb echo "";;

5) $bb clear;
start_sparse
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
$bb clear ;;

6) $bb clear;
start_vparse
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
