7) $bb clear;
start_sgm
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
fi
$bb clear ;;

8) $bb clear;
start_vgm
$bb echo ""
$bb echo -n " Pergi kembali ke menu?
[ Ya = 1 | Tidak = 2 ]: "
read option
if [ $option -ne 1 ]; then
	$bb echo ""
	$bb echo " Keluar dari menu. "
	$bb sleep 1
	exit
else
	$bb echo ""
  R
	$bb sleep 1
